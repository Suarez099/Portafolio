---
// ProjectCard.astro

interface ProjectCardProps {
  image: string;
  title: string;
  description: string;
  tools: Array<{ name: string; icon: any }>; // Actualiza los tipos para los iconos
  demoLink: string;
  githubLink: string;
}

const { image, title, description, tools, demoLink, githubLink } = Astro.props;
---

<div
  class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 ease-in-out dark:bg-gray-800 dark:border-gray-700"
>
  <a href="#">
    <img
      class="rounded-t-lg w-full h-48 object-cover"
      src={image}
      alt={`Imagen de ${title}`}
    />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-4 text-sm text-gray-700 dark:text-gray-400 leading-relaxed">
      {description}
    </p>

    <!-- Contenedor de herramientas con Ã­conos -->
    <div class="flex flex-wrap gap-2 mb-4">
      {
        tools.map((tool) => (
          <div class="flex items-center space-x-2">
            <span class="flex items-center bg-blue-100 text-blue-800 text-xs font-medium px-3 py-1 rounded-full dark:bg-blue-900 dark:text-blue-300">
              {tool.icon && <tool.icon class="w-4 h-4 mr-2" />}
              {tool.name}
            </span>
          </div>
        ))
      }
    </div>

    <div class="flex gap-4">
      <a
        href={demoLink}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700"
      >
        Demo
        <svg
          class="w-4 h-4 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
      <a
        href={githubLink}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-700 rounded-lg hover:bg-gray-800"
      >
        GitHub
        <svg
          class="w-4 h-4 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
