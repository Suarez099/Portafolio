---
import ProjectCard from './ui/proyectsCard.astro';

const projects = [
 
  {
    image: '/03.webp',
    title: 'Nombre del proyecto ',
    description: 'Descripción del proyecto ',
    tools: [
      { name: 'HTML', icon: Briesfcase  },
      { name: 'CSS', icon: Briesfcase  },
      { name: 'JavaScript', icon: Briesfcase },
      { name: 'Tailwind', icon: Briesfcase },
    ],
    demoLink: '#',
    githubLink: '#',
  },
  
];
import Briesfcase from "@/components/icons/Briefcase.astro"

---

<section class="grid gap-4 max-w-7xl mx-auto p-4 grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 place-items-center">

  {projects.map((project) => (
    <article>
      <ProjectCard {...project} />
    </article>
  ))}
  <article class="p-10 border border-gray-200 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 ease-in-out dark:bg-gray-800 dark:border-gray-700 col-span-1 md:col-span-2 text-center">
    <h2 class="text-2xl font-semibold mb-4">Más proyectos próximamente</h2>
    <img
      class="w-24 h-24 rounded-full mx-auto mb-4"
      src="/Programador.webp"
      alt="Logo del Portafolio"
      width="100"
      height="100"
      decoding="async"
      loading="lazy"
    />
    <p class="mb-4">
      Estoy trabajando en nuevos y emocionantes proyectos. ¡Mantente atento para más actualizaciones!
    </p>
  </article>
</section>
