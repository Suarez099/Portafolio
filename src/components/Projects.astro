---
import Image from "astro/components/Image.astro";
import G from "./icons/Code.astro"

export interface BentoBox {
  id: number;
  nombre: string;
  descripcion: string;
  tecnologias: { nombre: string; icon?: any }[];
  imagen: string;
  altImagen: string;
  enlace?: string;
}

const bentoboxs: BentoBox[] = [
  {
    id: 1,
    nombre: "Reto de Mecanografía",
    descripcion:
      "Un proyecto realizado por midudev donde se prueba la velocidad y precisión al escribir.",
    tecnologias: [
      { nombre: "HTML", icon: G },
      { nombre: "CSS" },
      { nombre: "JavaScript" },
      { nombre: "DOM" },
    ],
    imagen: "/03.webp",
    altImagen: "Captura de pantalla del proyecto del Reto de Mecanografía.",
    enlace: "/reto-mecanografia",
  },
  {
    id: 2,
    nombre: "ChatGPT Local",
    descripcion:
      "Un proyecto realizado por midudev que implementa una versión local de ChatGPT.",
    tecnologias: [
      { nombre: "HTML" },
      { nombre: "Tailwind CSS" },
      { nombre: "JavaScript" },
    ],
    imagen: "/04.webp",
    altImagen: "Captura de pantalla del proyecto ChatGPT Local.",
    enlace: "https://example.com/chatgpt-local",
  },
];
---

<div
  id="Proyectos"
  class="grid gap-4 max-w-4xl mx-auto p-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-4"
>
  

  {
    bentoboxs.map((proyecto) => (
      <div class="bg-slate-300 dark:bg-gray-900 dark:text-white text-black p-6 rounded-3xl col-span-1 lg:col-span-2 shadow-lg">
        <Image
          class="w-full h-48 rounded-3xl mb-4 object-cover"
          src={proyecto.imagen}
          alt={proyecto.altImagen}
          height={5}
          width={6}
          decoding="async"
          loading="lazy"
        />
        <h2 class="text-2xl font-semibold mb-2">{proyecto.nombre}</h2>
        <p class="mb-4">{proyecto.descripcion}</p>
        <span class="font-medium text-sm text-gray-700 dark:text-gray-300">
          Tecnologías utilizadas:
        </span>
        <ul class="mt-2 flex flex-wrap gap-2">
          {proyecto.tecnologias.map((tecnologia) => (
            <li class="flex items-center gap-2 bg-blue-500 text-white px-2 py-1 rounded-full text-xs">
              {/* <tecnologia.icono /> */}
              {tecnologia.nombre}
            </li>
          ))}
        </ul>
        {proyecto.enlace && (
          <div class="mt-4 flex gap-4">
            <a href={proyecto.enlace} target="_blank" rel="noopener noreferrer">
              <button class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-4 py-2 rounded-full shadow-lg hover:from-blue-600 hover:to-purple-600 transition duration-300 ease-in-out flex items-center gap-2">
                {/* <IconBrandDribbble /> */}
                Demo
              </button>
            </a>
            <a
              href="https://github.com/user/repo"
              target="_blank"
              rel="noopener noreferrer"
            >
              <button class="bg-gradient-to-r from-gray-700 to-gray-900 text-white px-4 py-2 rounded-full shadow-lg hover:from-gray-800 hover:to-gray-950 transition duration-300 ease-in-out flex items-center gap-2">
                {/* <IconGitHub /> */}
                Código
              </button>
            </a>
          </div>
        )}
      </div>
    ))
  }

  <div
    class="bg-slate-300 dark:bg-gray-900 dark:text-white text-black p-6 rounded-3xl col-span-1 lg:col-span-4 text-center"
  >
    <h2 class="text-2xl font-semibold mb-4">Más proyectos próximamente</h2>
    <Image
      class="w-24 h-24 rounded-full mx-auto mb-4"
      src="/Programador.webp"
      alt="Logo del Portafolio"
      width="100"
      height="100"
      decoding="async"
      loading="lazy"
    />
    <p class="mb-4">
      Estoy trabajando en nuevos y emocionantes proyectos. ¡Mantente atento para
      más actualizaciones!
    </p>
  </div>
</div>
